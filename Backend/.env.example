# Configurações do ambiente - copie para .env e configure com seus dados

# URL de conexão com o banco PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/condominio"

# Chave secreta para JWT (use uma chave aleatória e segura em produção)
JWT_SECRET="sua_chave_secreta_jwt_muito_segura_aqui"

# Porta do servidor
PORT=3000

# Ambiente (development, production, test)
NODE_ENV=development

# Configurações de logs
LOG_LEVEL=info
LOG_RETENTION_DAYS=90

# Configurações de segurança
BCRYPT_ROUNDS=12
JWT_EXPIRATION=24h

# Configurações de upload (se necessário)
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Configurações de email (para notificações futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# Configurações específicas do condomínio
CONDOMINIO_NOME="Nome do Condomínio"
CONDOMINIO_CNPJ="00.000.000/0001-00"
CONDOMINIO_ENDERECO="Endereço do Condomínio"
